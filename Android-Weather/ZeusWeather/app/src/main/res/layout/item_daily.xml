<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/daily_image_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/testimgae"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daily_day_textivew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/primary_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/daily_image_imageView"
        app:layout_constraintStart_toEndOf="@+id/daily_image_imageView"
        app:layout_constraintTop_toTopOf="@+id/daily_image_imageView"
        tools:text="Monday" />

    <TextView
        android:id="@+id/daily_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/daily_image_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/daily_image_imageView"
        app:layout_constraintTop_toTopOf="@+id/daily_image_imageView"
        tools:text="describtion" />

    <TextView
        android:id="@+id/daily_max_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/primary_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/daily_image_imageView"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/daily_image_imageView"
        tools:text="14" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@+id/daily_image_imageView"
        app:layout_constraintEnd_toStartOf="@+id/daily_min_textview"
        app:layout_constraintTop_toTopOf="@+id/daily_image_imageView" />
    <TextView
        android:id="@+id/daily_min_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/primary_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/daily_image_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/daily_image_imageView"
        tools:text="11" />
</androidx.constraintlayout.widget.ConstraintLayout>